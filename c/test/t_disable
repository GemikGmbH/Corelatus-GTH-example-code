#!/bin/bash -eu

export TOP_PID=$$
trap "exit 2" TERM

usage()
{
    echo "Usage: $0 <IP>"
    echo ""
    exit 1
}

die()
{
    echo $@ 1>&2
    kill -s TERM $TOP_PID
}

valid_disable()
{
    ../enable $IP $1 tx_enabled false 2>/dev/null
    ../disable $IP $1 2>/dev/null
}

invalid_disable()
{
    if ../disable $IP bogus 2>/dev/null
    then echo "invalid disable 1 succeeded"; exit 1; fi
}

if [ $# -lt 1 ]
then usage
fi

IP=$1
version=`../query_set $IP system_image version | cut -d = -f 2`
arch=`../query_set $IP board architecture | cut -d = -f 2`
case $version in
    gth2_system_36b)
	echo "skipping $0 because DUT is running a release without 'disable'" ;;
    *)
	invalid_disable
	case $arch in
	    sth*)
		valid_disable sdh1;;
	    *)
		valid_disable pcm1
	esac
esac

